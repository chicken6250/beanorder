-- Import the gpu API
local gpu = require("tom.peripherals.gpu")

-- Set the GPU to the side of the computer where your screen is connected
gpu.setScreenSide("right") -- Change "right" to the side where your screen is

-- Load the image
local image = gpu.loadImage("image.png")

-- Draw the image on the screen
gpu.drawImage(image, 1, 1)

-- Update the screen
gpu.update()

